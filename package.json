{
  "name": "intothebuffyverse",
  "version": "0.0.0",
  "description": "Cool Buffy Fandom Site",
  "license": "CC BY-NC-SA",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "start": "nodemon ./bin/www",
    "test": "npm run lint && npm run test:unit --watchAll --detectOpenHandles && npm run test:integration",
    "test:unit": "jest --watchAll --detectOpenHandles",
    "cypress:open": "cypress open",
    "test:integration": "cypress run",
    "cy:run:report": "nyc --reporter=html cypress run",
    "coverage": "nyc --reporter-lcov --reporter-text-lcov npm test"
  },
  "engines": {
    "node": ">=18.1.0"
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "reporter": [
      "text",
      "json"
    ],
    "extends": "@istanbuljs/nyc-config-babel",
    "extension": [
      ".js"
    ],
    "include": [
      "**"
    ],
    "exclude": [
      "cypress/",
      "assets/",
      "test/",
      "instrumented/"
    ],
    "all": true,
    "check-coverage": true
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.7",
    "hbs": "^4.2.0",
    "http-errors": "^2.0.0",
    "method-override": "^3.0.0",
    "mongoose": "^6.6.4",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "react-sound": "^1.2.0",
    "sass": "^1.55.0",
    "scss": "^0.2.4"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@istanbuljs/nyc-config-babel": "3.0.0",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^10.9.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-plugin-react": "^7.31.8",
    "istanbul-lib-coverage": "2.0.5",
    "jest": "^29.1.2",
    "nyc": "^15.1.0",
    "source-map-support": "0.5.16"
  }
}
